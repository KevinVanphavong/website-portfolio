<form method="post" style="padding: 0" action="{{ path("delete_category_experience", {"categoryExperienceId": categoryExperience.id}) }}" onsubmit="return confirm('You sure you want to delete this Category Experience ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_route" value="{{ app.request.attributes.get('_route') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoryExperience.id) }}">
    <button class="btn-delete-category-experience">
        <i class="fa-solid fa-circle-minus"></i>
    </button>
</form>