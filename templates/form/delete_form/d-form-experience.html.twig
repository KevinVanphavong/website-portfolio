<form method="post" style="padding: 0" action="{{ path("delete_work_experience", {"workExperienceId": workExperience.id}) }}" onsubmit="return confirm('You sure you want to delete this Work Experience ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_route" value="{{ app.request.attributes.get('_route') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workExperience.id) }}">
    <button class="btn-delete-work-experience">
        <i class="fa-solid fa-trash-can icon delete-icon"></i>
    </button>
</form>