{% extends "layout.html.twig" %}

{% block navbar %}
{% endblock %}

{% block stylesheets %}
{#    {{ encore_entry_link_tags('homepage-scss') }}#}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Offside', cursive;
        }

        body {
            background-color: #373737;
            height: 100vh;
            color: #fdfdfd;
        }

        .homepage {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .homepage > a {
            text-decoration: none;
        }

        .homepage-button {
            position: absolute;
            border-radius: 50%;
            cursor: pointer;
            width: 75px;
            height: 75px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
            color: black;
            transition-duration: 1s;
        }

        .homepage-button > p {
            text-align: center;
            font-size: 12px;
        }

        .homepage-button-control > p {
            font-size: 80px;
            color: rgba(243, 243, 243, 0.9);
        }

        .homepage-button-control {
            width: 200px;
            height: 200px;
            background: linear-gradient(120deg, rgba(55,55,55,1) 20%, rgba(0,0,0,1) 100%);
            box-shadow: inset 4px 4px 16px 0 rgb(253 253 253 / 40%);
        }

        .homepage-button-control-animation {
            animation: buttonScaling 5s ease-in-out 0s infinite normal none;
        }

        @keyframes buttonScaling{
            0% {
                transform:  scale(1);
            }
            20% {
                transform:  scale(1.3);
            }
            40% {
                transform:  scale(1);
            }
            60% {
                transform:  scale(1.2);
            }
            80% {
                transform:  scale(1);
            }
            100% {
            }
        }

        .shadow-button-control-animation {
            animation: shadowScaling 5s ease-in-out 0s infinite normal none;
        }

        @keyframes shadowScaling {
            0% {
                width: 200px;
                bottom: 25%;
                filter: blur(20px);
            }
            20% {
                width: 240px;
                bottom: 20%;
                filter: blur(28px);
            }
            40% {
                width: 200px;
                bottom: 25%;
                filter: blur(20px);
            }
            60% {
                width: 220px;
                bottom: 22%;
                filter: blur(24px);
            }
            80% {
                width: 200px;
                bottom: 25%;
                filter: blur(20px);
            }
            100% {
            }
        }


        .homepage-button-me {
            background-color: #fdfdfd;
        }

        .homepage-button-cv {
            background-color: rgba(253, 253, 253, 0.5);
            color: whitesmoke;
        }

        .homepage-button-hbo-studio {
            background-color: rgba(253, 253, 253, 0.3);
            color: whitesmoke;
        }

        .homepage-button-parent {
            z-index: 10;
        }

        .homepage-button-children {
            z-index: 9;
            box-shadow: 0 12px 8px 0 rgba(0,0,0,50%), inset 0 0 16px 4px rgba(0,0,0,25%)
        }

        .shadow-button-control {
            width: 200px;
            height: 30px;
            border-radius: 50%;
            position: absolute;
            bottom: 25%;
            background: linear-gradient(120deg, rgba(251,251,251,1) 0%, rgba(0,0,0,1) 29%);
            filter: blur(20px);

            display: flex;
        }

        .section-welcome {
            position: absolute;
            bottom: 10%;
            display: flex;
            grid-gap: 10px;
        }

        .section-welcome > p {
            font-size: 20px;
            background-color: transparent;
        }

    </style>
{% endblock %}

{% block body %}

    <section class="homepage">
        <div class="homepage-button homepage-button-parent homepage-button-control homepage-button-control-animation">
            <p>K.V</p>
        </div>
        <a href="{{ path('about-me') }}" class="homepage-button homepage-button-children homepage-button-me">
            <p>? ME ?</p>
        </a>
        <a href="{{ path('about-me') }}" class="homepage-button homepage-button-children homepage-button-cv">
            <p>CV</p>
        </a>
        <a href="{{ path('about-me') }}" class="homepage-button homepage-button-children homepage-button-hbo-studio">
            <p>HBO STUDIO</p>
        </a>

        <div class="shadow-button-control shadow-button-control-animation"></div>
        <div class="section-welcome">
            <p>W</p>
            <p>E</p>
            <p>L</p>
            <p>C</p>
            <p>O</p>
            <p>M</p>
            <p>E</p>
        </div>
    </section>

    <script>
        var shadowButtonControl = document.querySelector('.shadow-button-control')
        var homepageButtonControl = document.querySelector('.homepage-button-control')
        var homepageButtonMe = document.querySelector('.homepage-button-me')
        var homepageButtonCv = document.querySelector('.homepage-button-cv')
        var homepageButtonHboStudio = document.querySelector('.homepage-button-hbo-studio')

        function buttonStateShown() {
            homepageButtonMe.style.transform = "translate(-200%, -200%)"
            homepageButtonCv.style.transform = "translate(0,-300%)"
            homepageButtonHboStudio.style.transform = "translate(200%, -200%)"
        }

        function buttonStateHidden() {
            homepageButtonMe.style.transform = "translate(0, 0)"
            homepageButtonCv.style.transform = "translate(0,0)"
            homepageButtonHboStudio.style.transform = "translate(0, 0)"
        }

        counter = 0;
        homepageButtonControl.addEventListener('click', function () {
            if (counter%2 === 0) {
                homepageButtonControl.classList.remove('homepage-button-control-animation')
                shadowButtonControl.classList.remove('shadow-button-control-animation')
                buttonStateShown();
            } else {
                homepageButtonControl.classList.add('homepage-button-control-animation')
                shadowButtonControl.classList.add('shadow-button-control-animation')
                buttonStateHidden();
            }
            counter++;
        })

        var welcomeLetters = document.querySelectorAll('.section-welcome > p')
        var lettersCount = welcomeLetters.length

        function randomInteger(max) {
            return Math.floor(Math.random() * max);
        }

        function chooseRandomLetter() {
            return welcomeLetters[randomInteger(lettersCount)]
        }

        function fillLetter(letter) {
            letter.style.backgroundColor = "#fdfdfd";

            setTimeout(
                letter.style.backgroundColor = "",
                1500
            )
        }

        setInterval(
            function() {
                var letter = chooseRandomLetter();
                fillLetter(letter)
                console.log(letter)
            }
            , 2000
        )


    </script>
{% endblock %}